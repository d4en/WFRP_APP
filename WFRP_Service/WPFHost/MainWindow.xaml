<Window x:Class="WPFHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WFRP Serivce Host" Height="300" Width="400">
    <Grid>
        <Button Height="41" Width="367" 
        Margin="0,0,15,78" VerticalAlignment="Bottom" 
        HorizontalAlignment="Right" Name="buttonStop"
         Click="buttonStop_Click">Stop</Button>
        <Button Height="48" Width="367" 
        Margin="0,74,15,0" VerticalAlignment="Top"
         HorizontalAlignment="Right" Name="buttonStart"
          Click="buttonStart_Click">Start</Button>
        <Label Height="28" Margin="10,0,15,45" 
        VerticalAlignment="Bottom" Name="labelStatus">Status</Label>
        <Label Height="37" Margin="10,18,15,0"
         VerticalAlignment="Top" Name="labelTitle"
          FontFamily="Jokerman" FontSize="20"
           Foreground="White">WFRP Service</Label>
    </Grid>
</Window>
