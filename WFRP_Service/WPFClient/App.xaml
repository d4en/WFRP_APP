<Application x:Class="WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary 
                Source="/WPFClient;component/Styles/MetroStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButtonStyle}"/>
            <Style TargetType="{x:Type ListBox}" BasedOn="{StaticResource MetroListBoxStyle}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
