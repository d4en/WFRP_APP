        <Button x:Name="loginButtonConnect" Content="Login" HorizontalAlignment="Left" Margin="311,143,0,0" VerticalAlignment="Top" Width="75" Click="buttonConnect_Click"/>
        <Label x:Name="loginLabelStatus" Content="Status" HorizontalAlignment="Left" Margin="97,232,0,0" VerticalAlignment="Top" Width="149" Height="29"/>
        <Label x:Name="serverMsg" Content="Empty" HorizontalAlignment="Left" Margin="97,266,0,0" VerticalAlignment="Top" Width="348"/>
