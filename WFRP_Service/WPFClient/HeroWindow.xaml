<Window x:Class="WPFClient.HeroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HeroWindow" Height="300" Width="300"
        Visibility="{Binding HeroModelHeroWindowIsVisible, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
        Closing="HeroWindow_Closing">
    <Grid>
        <Label Content="Client name:" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="73"/>
        <TextBox 
            Name="clientName"
            Text="{Binding HeroModelClientName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" Height="23" Margin="88,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
